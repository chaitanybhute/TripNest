<%layout("layouts/boilerplate")%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <form action="/signup" method="POST" class="needs-validation novalidate">
      <label for="username" class="form-label">Username</label>
      <input
        name="username"
        id="username"
        class="form-control"
        required
        type="text"
      />

      <div class="mb-3"></div>

      <label for="email" class="form-label">Email</label>
      <input
        name="email"
        id="email"
        class="form-control"
        required
        type="email"
      />

      <div class="mb-3"></div>

      <label for="password" class="form-label">Password</label>
      <input
        name="password"
        id="password"
        class="form-control"
        required
        type="password"
      />

      <button class="btn mb-3 mt-3 Add-btn btn-success">Sign up</button>
    </form>
  </div>
</div>
